                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div> 
    <div style="border-radius: 50%;  display: flex; align-items: center; justify-content: center; margin-left: 40px; flex-direction: column;">
            <p style="font-size: 40px; color:#1861ac;">Dobrodosli </p> 
            <p style="font-size: 40px; color:#1861ac;">na</p>
            <img src="https://i.postimg.cc/KjnWLm3R/Logo-Blue.png" style="max-width: 500px; max-height: 100px; flex-wrap:wrap"/>
        </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
